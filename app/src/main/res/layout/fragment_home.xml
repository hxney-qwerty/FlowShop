<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:textDirection="ltr"
    tools:context="com.example.flowersshop.ui.homeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Система заказов цветочного магазина"
            android:textColor="#000"
            android:textSize="19dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="13dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/search_items"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@drawable/kk3"
                android:backgroundTint="#54D3D1D1"
                android:drawableLeft="@drawable/search"
                android:drawablePadding="-170dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="Найти"
                android:textColor="#656262"
                android:textSize="18dp">

            </TextView>

            <ImageButton
                style="@style/ThemeOverlay.MaterialComponents.Light"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/kk3"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/ic_baseline_format_list_bulleted_24">

            </ImageButton>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/home_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#1397D3"
                android:text="Главная"
                android:textColor="#FFF"
                android:textSize="12dp" />

            <Button
                android:id="@+id/packpack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="#1397D3"
                android:text="Цветы"
                android:textSize="12dp" />

            <Button
                android:id="@+id/shoe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="#1397D3"
                android:text="Аксессуары"
                android:textSize="12dp" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/frame2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

    </LinearLayout>

</FrameLayout>